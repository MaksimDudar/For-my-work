<h1>Слежение</h1>

<p><%= link_to 'Показать все треки!', tracks_path %></p>
<p><%= link_to 'Новое слежение', track_path([:new]) %></p><hr/>

<p><%= @track.created_at %></p>
<%= @track.pl %> |
<%= @track.pl2 %> |
<%= @track.perecep2 %> |
<%= @track.truck_by %> |
<%= @track.driver_by %> |
<%= @track.perecep %> |
<%= @track.truck_rus %> |
<%= @track.driver_rus %> |
<%= @track.semi_trailer %> |
<%= @track.country %>

<p class="fs-5 fw-semibold">Все комментарии</p>
<% @track.comments.each do |comment| %>
    <i><%= comment.author %>:</i><br/>
    <%= comment.body %>
    <% end %></p>

<p class="fs-5 fw-semibold">Добавить комментарий</p>

<p>
  <%= form_for([@track, @track.comments.build]) do |f| %>
    <p>

    <div class="form-group mb-1 w-50">
      <%= f.label :Имя, class: "form-label" %><br />
      <%= f.text_field :author, class: "form-control" %>
    </div>

    <p>
      <%= f.label :Комментарий %><br />
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit 'Сохранить', class:"btn btn-sm btn-primary" %>
    </p>

  <% end %>
