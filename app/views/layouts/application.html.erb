<!DOCTYPE html>
<html>
  <head>
    <title>Слежение</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
        <a class="link-primary navbar-brand" href="/">Главная страница</a></div>
          <div class="col-md-3">
          <%= link_to 'Показать все треки', tracks_path %> </div>
          <div class="col-md-3">
          <%= link_to 'Новое слежение', track_path([:new]) %></div>
    <div class="col-md-3 d-grid gap-2 d-md-flex ">
      <% if user_signed_in? %>
      Привет, <%= current_user.username %><%= button_to "Выход", destroy_user_session_path, method: :delete, class:"btn btn-secondary btn-sm"  %>
      <% else %>
      <%= button_to "Вход", new_user_session_path, class:"btn btn-secondary btn-sm"  %>
      <% end %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
    </div>
  </div>

  </body>
</html>
